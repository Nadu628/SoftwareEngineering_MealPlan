<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealprepmain.ChangePasswordController">
    <children>
        <Label layoutX="200.0" layoutY="50.0" text="Change Password">
            <font>
                <Font name="Monospaced Bold" size="30.0" />
            </font>
        </Label>

        <Label fx:id="usernameLabel" layoutX="100.0" layoutY="90.0" text="Changing password for: ">
            <font>
                <Font name="Monospaced Bold" size="16.0" />
            </font>
        </Label>

        <Label layoutX="100.0" layoutY="120.0" text="Current Password:">
            <font>
                <Font name="Monospaced Bold" size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="currentPasswordField" layoutX="300.0" layoutY="120.0" prefHeight="25.0" prefWidth="200.0" />

        <Label layoutX="100.0" layoutY="170.0" text="New Password:">
            <font>
                <Font name="Monospaced Bold" size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="newPasswordField" layoutX="300.0" layoutY="170.0" prefHeight="25.0" prefWidth="200.0" />

        <Label layoutX="100.0" layoutY="220.0" text="Confirm New Password:">
            <font>
                <Font name="Monospaced Bold" size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordField" layoutX="300.0" layoutY="220.0" prefHeight="25.0" prefWidth="200.0" />

        <Button fx:id="changePasswordButton" layoutX="250.0" layoutY="280.0" mnemonicParsing="false" text="Change Password" onAction="#handleChangePassword">
            <font>
                <Font name="Monospaced Regular" size="16.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="350.0" layoutY="280.0" mnemonicParsing="false" text="Cancel" onAction="#handleCancel">
            <font>
                <Font name="Monospaced Regular" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>