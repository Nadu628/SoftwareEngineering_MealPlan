<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealprepmain.HomeScreenController">

   <left>
      <GridPane prefHeight="590.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <ImageView fx:id="mealsIcon" fitHeight="70.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/foodIcon.png" />
               </image>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </ImageView>
            <ImageView fx:id="ingredientsIcon" fitHeight="70.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1">
               <image>
                  <Image url="@images/ingredientsIcon.png" />
               </image>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </ImageView>
            <ImageView fx:id="plannerIcon" fitHeight="70.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2">
               <image>
                  <Image url="@images/calenderIcon.png" />
               </image>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </ImageView>
         </children>
      </GridPane>
   </left>

   <center>
      <VBox spacing="10">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>

         <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-family: Monospaced; -fx-font-size: 16;" />

         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Search for Recipes:" />
            <TextField fx:id="searchTextField" promptText="Enter recipe name" />
            <Button fx:id="searchButton" text="Search" />
         </HBox>

         <Label fx:id="loadingLabel" text="Loading..." visible="false" style="-fx-font-size: 16px; -fx-text-fill: gray;" />

         <GridPane hgap="20" vgap="10">
            <columnConstraints>
               <ColumnConstraints percentWidth="35" />
               <ColumnConstraints percentWidth="65" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>

            <!-- LEFT SIDE: Ingredients -->
            <VBox spacing="10" GridPane.columnIndex="0">
               <ScrollPane fx:id="ingredientScrollPane" fitToHeight="true" fitToWidth="true" prefHeight="500">
                  <content>
                     <TilePane fx:id="ingredientsTilePane" />
                  </content>
               </ScrollPane>

               <Button fx:id="removeIngredientsButton" text="Remove Selected Ingredients" />
            </VBox>

            <!-- RIGHT SIDE: Meal details -->
            <VBox spacing="10" GridPane.columnIndex="1">
               <Label fx:id="mealLabel" text="Meal Label" underline="true">
                  <font>
                     <Font name="Monospaced Regular" size="20.0" />
                  </font>
               </Label>

               <ImageView fx:id="mealImageView" fitHeight="200" fitWidth="300" preserveRatio="true" />

               <ScrollPane fx:id="directionsScrollPane" fitToHeight="true" fitToWidth="true" prefHeight="300">
                  <content>
                     <VBox fx:id="directionsVBox" spacing="5" />
                  </content>
               </ScrollPane>

               <HBox spacing="10" alignment="CENTER">
                  <Button fx:id="previousButton" text="Previous" />
                  <Button fx:id="nextButton" text="Next" />
                  <Button fx:id="clearButton" text="Clear" />
               </HBox>
            </VBox>
         </GridPane>
      </VBox>
   </center>

</BorderPane>
